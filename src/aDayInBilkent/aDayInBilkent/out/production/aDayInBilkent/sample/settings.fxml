<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.geometry.Insets?>
<BorderPane style="-fx-background-image: url('https://github.com/askari12/2I.A-day-in-BIlkent/blob/Unstable/doc/Analysis%20Report%20Sections/2cabe09d%20(1).jpg?raw=true');" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Settings">

    <top>

        <Button fx:id="backButton" alignment="TOP_LEFT" mnemonicParsing="false" style="-fx-background-color: #FFFFFF;" text="Main Menu" onAction="#backButtonListener">

            <padding>
                <Insets top="10" left="10"/>
            </padding>

            <font>
                <Font name="Courier" />
            </font>
        </Button>

    </top>

    <center>

        <VBox alignment="TOP_CENTER" spacing="50" xmlns:fx="http://javafx.com/fxml">

            <Label style="-fx-font-weight: bold" text="Settings" BorderPane.alignment="CENTER" >
                <font>
                    <Font name="Courier" size="30.0" />
                </font>
            </Label>

            <HBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">

                <Label style="-fx-font-weight: bold" text="Music:" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Courier" size="20.0" />
                    </font>
                </Label>

                <CheckBox fx:id="musicCheckBox" onAction="#musicCheckBoxListener"/>

            </HBox>

            <HBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">

                <Label style="-fx-font-weight: bold" text="Audio:" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Courier" size="20.0" />
                    </font>
                </Label>

                <CheckBox fx:id="audioCheckBox" onAction="#audioCheckBoxListener"/>

            </HBox>

            <HBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">

                <Label style="-fx-font-weight: bold" text="Difficulty:" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Courier" size="20.0" />
                    </font>
                </Label>

                <HBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml">
                    <ToggleButton fx:id="easyToggleButton" text="Easy" onAction="#easyToggleButtonListener" />
                    <ToggleButton fx:id="mediumToggleButton" text="Medium" onAction="#mediumToggleButtonListener"/>
                    <ToggleButton fx:id="hardToggleButton" text="Hard" onAction="#hardToggleButtonListener"/>
                </HBox>

            </HBox>

        </VBox>

    </center>

</BorderPane>
